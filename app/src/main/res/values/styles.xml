<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!--        <item name="android:textViewStyle">@style/TextViewStyle</item>
                <item name="buttonStyle">@style/ButtonStyle</item>
                <item name="android:popupMenuStyle">@style/PopupMenu</item>-->
    </style>

    <style name="AppTheme.GradientStatusBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <!--    need font family-->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:layout_marginLeft">@dimen/margin_32</item>
        <item name="android:layout_marginRight">@dimen/margin_32</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_body_14</item>
        <item name="android:paddingStart">@dimen/margin_20</item>
        <item name="android:paddingLeft">@dimen/margin_20</item>
        <item name="android:paddingRight">@dimen/margin_20</item>
        <item name="android:paddingEnd">@dimen/margin_20</item>
        <!--      <item name="android:textCursorDrawable">@drawable/bg_cursor_color</item>-->
    </style>


</resources>
